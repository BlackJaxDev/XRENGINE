{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Editor (Default World)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Build/Editor/Debug/AnyCPU/Debug/net10.0-windows7.0/XREngine.Editor.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Editor (Unit Testing World)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Build/Editor/Debug/AnyCPU/Debug/net10.0-windows7.0/XREngine.Editor.exe",
            "args": ["--unit-testing"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "XRE_WORLD_MODE": "UnitTesting"
            }
        },
        {
            "name": "Debug Client (Server & other client run separately)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "prep-debug-client-with-server-and-client",
            "program": "${workspaceFolder}/Build/Editor/Debug/AnyCPU/Debug/net10.0-windows7.0/XREngine.Editor.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "XRE_NET_MODE": "Client",
                "XRE_UDP_CLIENT_RECEIVE_PORT": "5001",
                "XRE_WINDOW_TITLE": "XRE Editor (Client - Debug)"
            }
        },
        {
            "name": "Debug Server (Clients runs separately)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "prep-debug-server-with-2-clients",
