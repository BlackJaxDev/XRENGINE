{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Editor (Default World)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Build/Editor/Debug/AnyCPU/Debug/net10.0-windows7.0/XREngine.Editor.exe",
            "args": [],
            "cwd": "${workspaceFolder}/XREngine.Editor",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Editor (Unit Testing World)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Build/Editor/Debug/AnyCPU/Debug/net10.0-windows7.0/XREngine.Editor.exe",
            "args": ["--unit-testing"],
            "cwd": "${workspaceFolder}/XREngine.Editor",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "XRE_WORLD_MODE": "UnitTesting"
            }
        },
        {
            "name": "Debug Client (Server runs separately)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "start-server-no-debug",
            "program": "${workspaceFolder}/Build/Editor/Debug/AnyCPU/Debug/net10.0-windows7.0/XREngine.Editor.exe",
            "args": [],
            "cwd": "${workspaceFolder}/XREngine.Editor",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "XRE_NET_MODE": "Client"
            }
        },
        {
            "name": "Debug Server (Client runs separately)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "start-client-no-debug",
            "program": "${workspaceFolder}/Build/Editor/Debug/AnyCPU/Debug/net10.0-windows7.0/XREngine.Editor.exe",
            "args": [],
            "cwd": "${workspaceFolder}/XREngine.Editor",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "XRE_NET_MODE": "Server"
            }
        }
    ]
}